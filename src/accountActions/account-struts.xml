<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="accountLoggedoff" extends="default" namespace="/">

		<action name="registrerenDo" class="accountActions.RegisterAction">
			<result name="input" type="tiles">registreren</result>
			<result name="success" type="tiles">registreerBevestiging</result>
		</action>

		<action name="loginDo" class="accountActions.LoginAction">
			<result name="input" type="tiles">login</result>
			<result name="success" type="redirectAction">
				<param name="actionName">gebruikerspanel</param>
				<param name="namespace">/gebruiker</param>
			</result>
		</action>

		<action name="registreren">
			<result type="tiles">registreren</result>
		</action>
		<action name="login">
			<result type="tiles">login</result>
		</action>
	</package>

	<package name="accountLoggedIn" extends="userAware" namespace="/gebruiker">		
		<action name="gebruikerspanel">
			<result type="tiles">memberLayout</result>
		</action>
	</package>
</struts>