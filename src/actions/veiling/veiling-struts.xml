<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="veilingPlaatsen" extends="default" namespace="/veiling">
		<action name="plaatsenDo" class="actions.veiling.PlaatsAction">
			<result name="input" type="tiles">plaatsen</result>
			<result name="success" type="tiles">plaatsenBevestiging</result>
		</action>
		<action name="plaatsen">
			<result type="tiles">plaatsen</result>
		</action>
	</package>

	<package name="showVeilingen" extends="accountAware" namespace="/veilingen">
		<action name="mijn-veilingen" class="actions.veiling.Show">
			<!-- <interceptor-ref name="securityInterceptor">
				<param name="recht">aanbieder</param>
			</interceptor-ref> -->
			<result type="tiles">showVeilingen</result>
		</action>
		<action name="alleVeil" class="actions.veiling.ShowAlle">
			<result type="tiles">alleVeilingen</result>
		</action>
		<action name="veilingInfo" class="actions.veiling.ShowEen">
			<result type="tiles">veilingInfo</result>
		</action>
	</package>
</struts>
