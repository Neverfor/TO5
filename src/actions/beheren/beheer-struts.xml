<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="beheer" extends="accountAware" namespace="/beheer">
		<interceptors>
			<interceptor-stack name="securityStack">
				<interceptor-ref name="securityInterceptor">
					<param name="userRole">beheerder</param>
				</interceptor-ref>
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		
		<action name="accounts" class="actions.beheren.BeheerAccountsAction">
			<result type="tiles">beheerAccounts</result>
		</action>
		<action name="account" class="actions.beheren.BeheerAccountAction">
			<result type="tiles" name="success">beheerAccount</result>			
		</action>
		<action name="accountsave" class="actions.account.WijzigGegevens">
			<result type="tiles" name="success">beheeerAccounts</result>
			<result type="redirectAction" name="input">account</result>
		</action>
		
		
	</package>
</struts>